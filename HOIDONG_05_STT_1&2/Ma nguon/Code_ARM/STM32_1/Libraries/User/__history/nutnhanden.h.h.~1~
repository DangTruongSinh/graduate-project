#include "stm32f10x.h"
#include "LCD.h"
#include "stdio.h"
#include "24c02.h"
#include "Touch.h"
#include "Led.h"
   
void TO_MAU_HINH_VUONG(u8 X1,u8 X2,u16 Y1, u16 Y2,u16 COLOR)
{
   u16 Y;
   u8 X;
   for(Y=Y1;Y<Y2;Y++)
   {   
      for(X=X1;X<X2;X++)
      {
         LCD_DRAW_POINT_COLOR(X,Y,COLOR);
      }
   }
}

void VE_HINH_VUONG_NOI(u8 X1,u8 X2,u16 Y1, u16 Y2)
{
//POINT_COLOR=BLACK;
LCD_DRAW_LINE_COLOR(X1,Y1,X2,Y1,WHITE);
LCD_DRAW_LINE_COLOR(X1,Y1+1,X2,Y1+1,WHITE);
LCD_DRAW_LINE_COLOR(X1,Y1,X1,Y2,WHITE);
LCD_DRAW_LINE_COLOR(X1+1,Y1,X1+1,Y2,WHITE);
//POINT_COLOR=BLACK;
LCD_DRAW_LINE_COLOR(X1,Y2,X2,Y2,BLACK);
LCD_DRAW_LINE_COLOR(X1,Y2+1,X2,Y2+1,BLACK);
LCD_DRAW_LINE_COLOR(X2,Y1,X2,Y2,BLACK);
LCD_DRAW_LINE_COLOR(X2+1,Y1,X2+1,Y2,BLACK); 
}

void VE_HINH_VUONG_CHIM(u8 X1,u8 X2,u16 Y1, u16 Y2)
{
//POINT_COLOR=BLACK;
LCD_DRAW_LINE_COLOR(X1,Y1,X2,Y1,BLACK);
LCD_DRAW_LINE_COLOR(X1,Y1+1,X2,Y1+1,BLACK);
LCD_DRAW_LINE_COLOR(X1,Y1,X1,Y2,BLACK);
LCD_DRAW_LINE_COLOR(X1+1,Y1,X1+1,Y2,BLACK);
//POINT_COLOR=BLACK;
LCD_DRAW_LINE_COLOR(X1,Y2,X2,Y2,WHITE);
LCD_DRAW_LINE_COLOR(X1,Y2+1,X2,Y2+1,WHITE);
LCD_DRAW_LINE_COLOR(X2,Y1,X2,Y2,WHITE);
LCD_DRAW_LINE_COLOR(X2+1,Y1,X2+1,Y2,WHITE); 
}

void TO_MAU_4HINH_VUONG()
{
   TO_MAU_HINH_VUONG(45,95,42,92,RED);
   TO_MAU_HINH_VUONG(45,95,134,184,RED);
   //TO_MAU_HINH_VUONG(45,95,226,276,GREEN);
   
   TO_MAU_HINH_VUONG(141,191,42,92,RED);
   TO_MAU_HINH_VUONG(141,191,134,184,RED);
   //TO_MAU_HINH_VUONG(141,191,226,276,GREEN);
}

void VE_4HINH_VUONG_NOI()
{
   VE_HINH_VUONG_NOI(45,95,42,92);
   VE_HINH_VUONG_NOI(45,95,134,184);
   //VE_HINH_VUONG_NOI(45,95,226,276);
      
   VE_HINH_VUONG_NOI(141,191,42,92);
   VE_HINH_VUONG_NOI(141,191,134,184);
   //VE_HINH_VUONG_NOI(141,191,226,276);
}
